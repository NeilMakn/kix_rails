<script id="form-template" type="text/x-handlebars-template">
  <form>
    <textarea cols="40" rows="5" name="{{ subtask }}" id="{{ subtask }}"></textarea>
    <br>
    <input class="btn btn-large btn-primary" type="submit" value="Save" id="submit-{{ subtask }}">

    <div class="toggle-group">
      <span class="toggle-text">Mark Complete</span>
      <div id="toggle-{{ subtask }}" data-cat="{{ category }}" data-subtask="{{ subtask }}" class="toggle toggle-icon">
        <label class="toggle-radio fui-checkmark-16" for="toggle2-{{ subtask }}"></label>
        <input type="radio" class="toggle-task" name="{{ subtask }}" id="toggle1-{{ subtask }}" value="1">
        <label class="toggle-radio fui-cross-16" for="toggle1-{{ subtask }}"></label>
        <input type="radio" class="toggle-task" name="{{ subtask }}" id="toggle2-{{ subtask }}" value="0">
      </div>
    </div>
  </form>
</script>