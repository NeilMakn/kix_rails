<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :type_task %><br />
    <%= f.select :type_task, Task::TYPES.collect {|k, v| [k.to_s, v]} %>
  </div>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :completed %>
    <%= f.check_box :completed, {}, Time.now %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
